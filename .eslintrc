{
  "env": {
    "node": true,
    "es6": true
  },

  "ecmaFeatures": {
    "generators": true
  },

  "rules": {
    "comma-dangle": 0,
    "max-len": [1, 80, 4],
    "no-console": 2,
    "no-func-assign": 2,
    "no-multi-spaces": 0,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unreachable": 2,
    "no-var": 2,
    "new-cap": 0,
    "one-var": [2, "never"],
    "quotes": [1, "single"],
    "semi": [2, "always"],
    "valid-typeof": 2
  }
}
